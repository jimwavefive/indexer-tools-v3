{
  "enabledPlugins": {
    "playwright@claude-plugins-official": true
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pii-check.sh",
            "statusMessage": "Checking for PII...",
            "timeout": 10
          },
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-commit-build-check.sh",
            "statusMessage": "Verifying TypeScript build...",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
